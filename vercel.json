{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/assets/(.*)",
      "headers": {
        "Content-Type": "application/javascript",
        "cache-control": "public, max-age=31536000, immutable"
      },
      "dest": "/dist/assets/$1"
    },
    {
      "src": "/(.*\\.js)$",
      "headers": {
        "Content-Type": "application/javascript; charset=utf-8"
      },
      "dest": "/dist/$1"
    },
    {
      "src": "/(.*\\.(css|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot|json))$",
      "dest": "/dist/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "status": 200,
      "headers": {
        "Content-Type": "text/html; charset=utf-8"
      },
      "dest": "/dist/index.html"
    }
  ],
  "crons": [
    { "path": "/api/cron/send-reminders", "schedule": "30 4 * * *" },
    { "path": "/api/cron/send-reminders", "schedule": "30 10 * * *" }
  ]
}