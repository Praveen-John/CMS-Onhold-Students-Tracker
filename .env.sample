# Database Configuration
# Replace with your MongoDB Atlas connection string
# Format: mongodb+srv://username:password@cluster.mongodb.net/databaseName
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/cms-tracker

# Server Configuration
PORT=5000
NODE_ENV=development

# Gmail OAuth2 Configuration (for email notifications)
EMAIL_USER=
EMAIL_CLIENT_ID=
EMAIL_CLIENT_SECRET=
EMAIL_REFRESH_TOKEN=

# Google Gemini AI Configuration
GEMINI_API_KEY=

# Cron Job Secret
# A secret key to prevent unauthorized access to the cron job endpoint
CRON_SECRET=

# ==========================================
# SECURITY CONFIGURATION (NEW)
# ==========================================

# Google OAuth 2.0 Configuration (REQUIRED for secure login)
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=f"{BASE_URL}/callback"

# JWT Secret (REQUIRED)
# Used to sign JWT tokens for authentication
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=

# Session Secret (REQUIRED)
# Used for session management
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
SESSION_SECRET=

# Encryption Key (REQUIRED for field encryption)
# Used to encrypt sensitive fields (reasonToHold, followUpComments)
# Must be 64 characters (hex format)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=

# Client URL (OPTIONAL)
# Frontend URL for OAuth redirects
# Default: http://localhost:5173 (development)
CLIENT_URL=http://localhost:3000

# ==========================================
# FRONTEND CONFIGURATION (for .env.local)
# ==========================================

# Backend API URL (Frontend only)
# Development: http://localhost:5000/api
# Production: Your deployed backend URL (e.g., https://your-backend.vercel.app/api)
VITE_BASE_URL=http://localhost:5000/api

# Google OAuth Client ID (Frontend only)
# Get from: https://console.cloud.google.com/apis/credentials
VITE_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com